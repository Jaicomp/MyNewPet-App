include header.pug
link(href='public/css/index.css', rel='stylesheet')
link(href='public/css/filter.css', rel='stylesheet')
script(src='public/js/filter.js', defer)

form.inputbox(onsubmit="return false;")
	input(type='text', required, onchange='filterCards(this)')
	#filter Filtro
	button.del(type='reset')

#cardsContainer
	- for (var i in data) {
	a.card(href='bleed?typeanimal='+data[i].name)
		img(src='http://lorempixel.com/400/200/', width=100, height=100)
		.dataCard
			.typeAnimal #{data[i].name}
	- }

